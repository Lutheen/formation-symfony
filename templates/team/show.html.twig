{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ team.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ team.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ team.roles ? team.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ team.password }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ team.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ team.lastname }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">back to list</a>

